@model StudentForm.Models.StudentModel

<html>
    <head>

    </head>
    <body>
        <h3>Edit Student Data</h3>
        <form asp-action="EditStudent" method="post" class="w-50">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Email">Name</label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="RollNumber">Roll Number</label>
                <input type="text" asp-for="RollNumber" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input type="text" asp-for="Address" class="form-control" />
            </div>

            <button type="submit" value="submit" class="btn btn-primary mt-2">Save</button>

        </form>
    </body>
</html>
