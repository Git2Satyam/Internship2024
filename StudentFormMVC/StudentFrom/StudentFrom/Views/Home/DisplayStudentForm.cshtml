@model StudentForm.Models.StudentModel

<html>
    <head>

    </head>
    <body>
        <h3>Create Student</h3>
    <form asp-action="DisplayStudentForm" asp-controller="Home" method="post" class="w-50">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" placeholder="Enter Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="RollNumber">RollNumber</label>
            <input type="number" asp-for="RollNumber" placeholder="Enter RollNumber" class="form-control" />
            <span asp-validation-for="RollNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" placeholder="Enter Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Address">Address</label>
            <input type="text" asp-for="Address" placeholder="Enter Name" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
          
         <button type="submit" value="submit" class="btn btn-primary mt-2">Submit</button>
         
      </form>
    </body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





