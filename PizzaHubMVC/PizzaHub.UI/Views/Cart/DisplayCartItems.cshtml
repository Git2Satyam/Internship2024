@model IEnumerable<PizzaHub.Models.ProductModel>

<div class="card">
    <div class="card-body">
        <h4 class="mt-3">Cart Items</h4>
        @if(Model.Count() > 0)
        {
            @foreach(var product in Model)
            {
                <div class="row mt-2">
                    <div class="col-md-2 col-lg-2">
                        <img src="@Url.Content(product.ImageUrl)" alt="no image" class="img-fluid" />
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <div><strong>@product.ProductName</strong></div>
                        <div>@product.ProdcutDescription</div>
                        <div><small>@product.Currency</small>@product.UnitPrice</div>
                        <div style="max-width: fit-content">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button onclick="updateQuantity('@product.Id','@product.Quantity',-1)" class="btn btn-outline-secondary" type="button">-</button>
                                </div>
                                <input class="form-control sm-control text-center" size="2" min="0" name="quantity" value="@product.Quantity" readonly />
                                <div class="input-group-append">
                                    <button onclick="updateQuantity('@product.Id','@product.Quantity',1)" class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                       
                    </div>
                </div>
            }
        }
       
    </div>
</div>

@section Scripts{
   <script src="~/js/Cart.js"></script>
}
